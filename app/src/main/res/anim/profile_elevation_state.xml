<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <set>
            <objectAnimator android:duration="100" android:propertyName="translationZ"
                android:valueTo="4dp" android:valueType="floatType" />
        </set>
    </item>
    <!-- base state -->
    <item android:state_enabled="true">
        <set>
            <objectAnimator android:duration="100" android:propertyName="translationZ"
                android:startDelay="100" android:valueTo="0dp" android:valueType="floatType" />
        </set>
    </item>
</selector>